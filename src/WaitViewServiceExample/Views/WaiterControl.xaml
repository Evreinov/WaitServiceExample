<UserControl x:Class="WaitViewServiceExample.Views.WaiterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WaitViewServiceExample.Views"
             mc:Ignorable="d"
             d:DesignHeight="80" d:DesignWidth="400">
    <Grid Margin="10" Width="350" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <ProgressBar Grid.Row="0" IsIndeterminate="True" VerticalContentAlignment="Stretch" />
        <TextBlock Grid.Row="1" Text="{Binding Message}" />
    </Grid>
</UserControl>
